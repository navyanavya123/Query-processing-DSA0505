import pandas as pd

# Create a sample DataFrame
data = {'A': [1, 2, None, 4],
        'B': [None, 5, 6, 7],
        'C': [8, 9, 10, None]}
df = pd.DataFrame(data)

# Display the original DataFrame
print("Original DataFrame:")
print(df)

# Replace null values with a specified value, for example, 0
df_filled = df.fillna(0)

# Display the DataFrame after filling null values
print("\nDataFrame after replacing null values:")
print(df_filled)
